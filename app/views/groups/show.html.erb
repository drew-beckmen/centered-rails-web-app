<h1><%= @group.name %></h2>
<p><strong>Description: </strong><%= @group.description %></p>
<img class="img-fluid" src="<%= @group.img_url %>">
<br>
<h2>We like to:</h2>
<ul>
    <% @group.activity_types.each do |acti| %>
        <li><%= acti.name %></li>
    <% end %>
</ul>
<br>
<h2>Members List</h2>
<ul>
    <% @group.users.each do |user| %>
        <li><%= link_to user.name, user_path(user) %></li>
    <% end %>
</ul>
<% if @group.belong?(@user) %>
    <%= form_with model: @membership, method: "delete", local: true  do |f| %>
        <%= f.hidden_field :group_id, :value => @group.id %>
        <%= f.hidden_field :user_id, :value => session[:user_id] %>
        <%= f.submit "Leave Group" %>
    <% end %>
<% else %>
    <%= form_with model: @membership, local: true do |f| %>
        <%= f.hidden_field :group_id, :value => @group.id %>
        <%= f.hidden_field :user_id, :value => session[:user_id] %>
        <%= f.submit "Join Group" %>
    <% end %>
<% end %>

<% if @group.is_creator?(@user) %>
    <%= form_with url: edit_group_path(@group), method: "get", local: true  do |f| %>
        <%= f.submit "Edit Group" %>
    <% end %>
<% end %>


