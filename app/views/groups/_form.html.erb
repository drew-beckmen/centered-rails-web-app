<% if flash[:messages] %>
    <ul>
    <% flash[:messages].each do |msg| %>
        <li style="color:red"><%= msg %></li>
    <% end %>
    </ul>
<% end %>

<%= form_with model: @group, local: true do |f| %>
    <strong><%= f.label :name %></strong>
    <%= f.text_field :name%>
    <strong><%= f.label :description %></strong>
    <%= f.text_area :description %>
    <strong><%= f.label "Image URL (optional)" %></strong>
    <%= f.text_field :img_url %>
    <%= f.hidden_field :creator_id, value: @user.id %>
    <%= f.submit %>
<% end %>