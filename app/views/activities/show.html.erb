<%= stylesheet_link_tag "profile.css" %>

<h1><%= @activity.activity_type.name %>:</h1> <em><p><%= @activity.description %></p></em>

<img style="padding:40px" ALIGN="left" class="img-fluid" id="profilepic" src="/assets/Red Lines Sports Logo.png">

<br><br><br>
<h2><strong>Date: </strong><%= @activity.activity_date.strftime('%B %e, %Y') %></h2>
<h2><strong>Duration: </strong><%= "#{@activity.duration.round(2)} hours"%></h2>
<h2><strong>Goal: </strong><%= link_to @activity.goal.name, goal_path(@activity.goal) %></h2>
<h2><strong>Rating:</strong></h2> 
<div class="progress" style="width: 25%;">
    <div class="progress-bar bg-warning" role="progressbar" style="width: <%= @activity.rating * 10 %>%;" aria-valuenow="<%= @activity.rating %>" aria-valuemin="0" aria-valuemax="10"><%= @activity.rating %>/10</div>
</div>
<br>
<br>

<%= link_to 'Edit this Activity', "/activities/#{@activity.id}/edit", :method => :get, :class => "btn btn-primary"%>

</br>
</br>
