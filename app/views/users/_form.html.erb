<% if flash[:errors] || flash[:password_mismatch] %>
    <h2>Errors:</h2>
    <ul>
    <% flash[:errors].each do |error| %>
        <li><%= error %></li>
    <% end %>
    <% if flash[:password_mismatch] %>
        <li><%= flash[:password_mismatch] %></li>
    <% end %>
    </ul>
<% end %>


<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br/>

    <%= f.label "Email Address" %>
    <%= f.text_field :contact %>
    <br/>

    <%= f.label :username %>
    <%= f.text_field :username %>
    <br/>

    <%= f.label "Profile Photo Link"%>
    <%= f.text_field :photo %>
    <br/>

    <%= f.label :password %>
    <%= f.password_field :password %>
    <br/>


    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <br/>
    <%= f.submit %>

<% end %>